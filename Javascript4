// frontend/src/services/api.js
import axios from 'axios';

const API_BASE_URL = process.env.REACT_APP_API_URL || 'http://localhost:5000/api';

const api = axios.create({
    baseURL: API_BASE_URL,
    headers: {
        'Content-Type': 'application/json',
    },
});

// Request interceptor for adding auth token if needed
api.interceptors.request.use(
    (config) => {
        const token = localStorage.getItem('token');
        if (token) {
            config.headers.Authorization = `Bearer ${token}`;
        }
        return config;
    },
    (error) => {
        return Promise.reject(error);
    }
);

export const hcmApi = {
    // Employee endpoints
    getEmployees: (params) => api.get('/hcm/employees', { params }),
    getEmployeeById: (id) => api.get(`/hcm/employees/${id}`),
    createEmployee: (employeeData) => api.post('/hcm/employees', employeeData),
    
    // Department endpoints
    getDepartments: () => api.get('/hcm/departments'),
    
    // Job endpoints
    getJobs: () => api.get('/hcm/jobs'),
};

export default api;
